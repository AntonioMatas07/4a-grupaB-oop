from math import pi
from datetime import datetime

class Krug:
    def __init__(self, r): self.r = r
    def opseg(self): return 2 * pi * self.r
    def povrsina(self): return pi * self.r**2

class Valjak(Krug):
    def __init__(self, r, h):
        super().__init__(r)
        self.h = h
    def volumen(self): return pi * self.r**2 * self.h
    def oplosje(self): return 2 * pi * self.r * (self.r + self.h)

print("Sekunde:", datetime.now().second)

from datetime import datetime

class Pravokutnik:
    def __init__(self, a, b):
        self.a, self.b = a, b
    def opseg(self): return 2*(self.a + self.b)
    def povrsina(self): return self.a * self.b

class Kvadar(Pravokutnik):
    def __init__(self, a, b, c):
        super().__init__(a, b)
        self.c = c
    def volumen(self): return self.a * self.b * self.c
    def oplosje(self): return 2*(self.a*self.b + self.a*self.c + self.b*self.c)

print("Minute:", datetime.now().minute)
